<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear"
    android:padding="10dp">

    <TextView android:layout_marginTop="5dp"
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="19sp"
        android:textColor="@color/colorLightGreen"
        android:background="@color/colorLightGrey"
        android:text="  Traditional uniforms of Zagori"
        xmlns:android="http://schemas.android.com/apk/res/android"
        />

    <TextView android:layout_marginTop="0dp"
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="clip_vertical"
        android:textSize="12sp"
        android:textColor="@color/colorLightGreen"
        android:background="@color/colorPrimary"
        android:text="Traditional uniforms"
        xmlns:android="http://schemas.android.com/apk/res/android"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/zagori1"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_marginTop="5dp"
        android:text="Apron from Zagori, Epirus"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/zagori2"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:layout_marginTop="5dp"
        android:text="Dress from Zagori Epirus"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/zagori3"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:layout_marginTop="5dp"
        android:text="Flokata from Zagori, Epirus"/>
</LinearLayout>