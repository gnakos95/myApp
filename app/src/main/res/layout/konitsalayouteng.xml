<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear"
    android:padding="10dp">

    <TextView android:layout_marginTop="5dp"
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="19sp"
        android:textColor="@color/colorLightGreen"
        android:background="@color/colorLightGrey"
        android:text="  Konitsa-Aoos"
        xmlns:android="http://schemas.android.com/apk/res/android"
        />
    <TextView android:layout_marginTop="0dp"
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="clip_vertical"

        android:textSize="12sp"
        android:textColor="@color/colorLightGrey"
        android:background="@color/colorPrimary"
        android:text="Rivers/Canyons, Picturesque scenery"
        xmlns:android="http://schemas.android.com/apk/res/android"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/konitsa9"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_marginTop="20dp"

        android:text="@string/txt7"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/konitsa5"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:layout_marginTop="20dp"
        android:text="@string/txt8"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/charadra"
        android:scaleType="fitXY"
        />
</LinearLayout>